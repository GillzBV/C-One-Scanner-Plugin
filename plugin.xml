<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="RFID" version="0.0.1">
	<name>RFID</name>
	<description>RFID</description>
	<license>MIT</license>
	<keywords>RFID</keywords>
	<js-module name="RFID" src="www/RFID.js">
		<clobbers target="cordova.plugins.RFID"/>
	</js-module>
	<engines>
		<engine name="cordova" version=">=3.6.0"/>
	</engines>
	<platform name="android">
		<framework src="src/android/rfid.gradle" custom="true" type="gradleReference"/>
		<config-file target="res/xml/config.xml" parent="/*">
			<feature name="RFID">
				<param name="android-package" value="nl.gillz.RFID"/>
			</feature>
		</config-file>
		<source-file src="src/android/nl/gillz/RFID.java" target-dir="src/nl/gillz/RFID"/>
		<resource-file src="libs/CpcHdkCone-1.11.2.aar" target="libs/CpcHdkCone-1.11.2.aar"/>
		<resource-file src="libs/CpcPowerMgmt-3.6.3.aar" target="libs/CpcPowerMgmt-3.6.3.aar"/>
		<resource-file src="libs/CpcSerialCommunication-2.0.4.aar" target="libs/CpcSerialCommunication-2.0.4.aar"/>
	</platform>
</plugin>